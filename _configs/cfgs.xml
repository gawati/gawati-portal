<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://gawati.org/portal/config">
    <serverInfo>
        <host>localhost</host>
        <xsltServerBase>/xslt</xsltServerBase>
    </serverInfo>
    <devMode status="dev">
        <!-- modes : dev & deploy -->
        <systemDate>2015-12-11</systemDate>
    </devMode>
    <backgroundSave>true</backgroundSave>
    <!-- timezone in dayTimeDuration format -->
    <timeZone>PT1H</timeZone>
    <!-- format in XSLT dateTime formatting style -->
    <displayDateFormats>
        <displayDateFormat name="default" value="[MNn] [D] [Y0001]"/>
    </displayDateFormats>
    <displayDateTimeFormats>
        <displayDateTimeFormat nam="default" value="[MNn] [D] at [h1]:[m01] [P] "/>
    </displayDateTimeFormats>
    <languages>
        <language code="eng" i18nname="English" default="default"/>
    </languages>
    <templateServers>
        <templateServer name="dev" base="http://localhost/gwtemplates/themes">
            <pages>
                <page name="default" href="page.xhtml"/>
            </pages>
        </templateServer>
    </templateServers>
</config>